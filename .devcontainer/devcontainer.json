{
  "name": "AWS Bootcamp Environment",
  "image": "mcr.microsoft.com/devcontainers/docker:ubuntu",  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteEnv": {
    "AWS_CLI_AUTO_PROMPT": "on-partial",
    "PATH": "/usr/local/bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "42Crunch.vscode-openapi",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"  // âœ… Use host Docker daemon
  ]
}
